<header class="header">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item logo" title="Asciidoctor" href="https://asciidoctor.org"><img src="{{{uiRootPath}}}/img/cai-logo-white.png" alt="Asciidoctor" width="48"></a>
      <a class="navbar-item title" href="{{#with (and site.url site.homeUrl)}}{{{@root.site.url}}}{{{this}}}{{else}}{{{siteRootPath}}}{{/with}}">{{site.title}}</a>
      <button class="navbar-burger" aria-controls="topbar-nav" aria-expanded="false" aria-label="Toggle main menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
        {{#if env.ALGOLIA_API_KEY}}
        <div class="navbar-item search hide-for-print">
          {{#if (and page.component (ne page.component.name 'home') (ne page.component.name 'ROOT'))}}
          <div id="search" class="field has-filter">
            <input class="query" type="text" placeholder="Search the docs">
            <label class="filter checkbox">
              <input type="checkbox" data-facet-filter="component:{{page.component.name}}"> In this project
            </label>
          </div>
          {{else}}
          <div id="search" class="field">
            <input class="query" type="text" placeholder="Search the docs"{{#if page.home}} autofocus{{/if}}>
          </div>
          {{/if}}
        </div>
        {{/if}}
      </div>
    </div>
  </nav>
</header>
